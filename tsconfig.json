{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"lib": [
			"DOM",
			"ES2015",
			"ES2016",
			"ES2017",
			"ES2018",
			"ES2019",
			"ES2020",
			"ES2021",
			"ES2022",
			"ES2023",
			"ESNext",
		],
		"allowJs": false,
		"jsx": "react",
		"jsxFactory": "Tui.createElement",
		"declaration": false,
		"outDir": "./dist",
		"rootDir": "./src",
		"removeComments": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"strictBindCallApply": true,
		"strictPropertyInitialization": true,
		"noImplicitThis": true,
		"moduleResolution": "node",
		"baseUrl": "./src",
		"strict": true,
		"paths": {
			"@tui": [
				"./tui/index.ts"
			],
			"@tui/*": [
				"./tui/*"
			]
		},
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"inlineSourceMap": true,
		"experimentalDecorators": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true
	},
	"include": [
		"./src/**/*"
	],
	"exclude": [
		"node_modules"
	]
}
